{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./*.ts", "./node_modules/@types/*.ts"],
  "exclude": ["node_modules"]
}
